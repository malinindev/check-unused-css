{
  "name": "check-unused-css",
  "version": "0.0.5",
  "description": "Console utility for finding unused CSS classes in TypeScript projects",
  "author": "Serge Malinin <s@malinin.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/malinindev/check-unused-css.git"
  },
  "homepage": "https://github.com/malinindev/check-unused-css",
  "bugs": {
    "url": "https://github.com/malinindev/check-unused-css/issues"
  },
  "keywords": ["css", "unused", "typescript", "cli", "tool"],
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "check-unused-css": "dist/index.js"
  },
  "files": ["dist", "README.md", "LICENSE"],
  "scripts": {
    "dev": "tsc --project tsconfig.build.json --watch",
    "build": "rm -rf dist && tsc --project tsconfig.build.json",
    "build:dev": "bun run build && chmod +x dist/index.js",
    "build:pack": "bun run build && bun pack",
    "release:prepare": "changeset",
    "release:publish": "changeset publish",
    "prepublishOnly": "bun run check:all",
    "test": "bun run build && bun test src/__tests__/**/*.test.ts",
    "check:all": "bun run check:format && bun run check:type && bun run test",
    "check:type": "tsc --noEmit",
    "check:lint": "biome lint ./src",
    "check:format": "biome format ./src",
    "fix:format": "biome format --write ./src"
  },
  "engines": {
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "css-selector-parser": "^3.1.3",
    "glob": "^11.0.0",
    "postcss": "^8.5.6"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@changesets/cli": "^2.29.2",
    "@types/bun": "^1.2.17",
    "@types/node": "^22.0.0",
    "@types/react": "^18.0.0",
    "typescript": "^5.8.3"
  }
}
